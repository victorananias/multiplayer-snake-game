@model MultiplayerSnakeGame.ViewModels.GameInfo

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Snake Game</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <script>
        var gameId = "@Model.Id"
    </script>
</head>

<body>
<div class="flex-center">
    <div class="game-container">
        <canvas id="game" width="500" height="500"></canvas>
    </div>

    <div class="info-container">
        <table id="score">
            <thead>
            <tr>
                <th colspan="2">
                    Scores
                </th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="game-over">
    <span class="game-over-text"></span>
</div>

<style>
    .game-over {
        position: fixed;
        width: 100%; 
        height: 100%; 
        left: 0; 
        top: 0; 
        background-color: #000;
        text-align: center;
        animation: opacity-animation 1s;
        animation-play-state: paused;
        display: none;
        opacity: 0.6;
    }
    
    .text-winner {
        color: green; 
        font-size: 5rem; 
        line-height: 90vh;
    }
    
    .text-loser {
        color: red; 
        font-size: 5rem; 
        line-height: 90vh;
    }
    
    @@keyframes opacity-animation {
        from {
            opacity: 0;
        }
        to {
            opacity: 0.6;
        }
    }
</style>

<script src="~/node_modules/@@microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/Keyboard.js"></script>
    <script src="~/js/Background.js"></script>
    <script src="~/js/Fruit.js"></script>
    <script src="~/js/Snake.js"></script>
    <script src="~/js/Index.js"></script>
</body>

</html>